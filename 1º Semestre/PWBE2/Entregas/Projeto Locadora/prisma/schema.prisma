generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "mysql"      // MariaDB usa provider mysql
  url = env("DATABASE_URL")
}

model carros {
  id     Int    @id @default(autoincrement())
  placa  String @unique
  modelo String
  marca  String
  ano    String
}

model clientes {
  id    Int    @id @default(autoincrement())
  nome  String
  cpf   String @unique
  email String @unique
  cnh   String
}